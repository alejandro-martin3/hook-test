#!/usr/bin/env bash
set -euo pipefail

# Warn after a pull that merged new commits if dependency files changed
if git diff --name-only HEAD@{1} HEAD | grep -qE '(^|/)(package(-lock)?\.json)$'; then
  echo
  echo "âš ï¸  Dependency files changed (package.json / package-lock.json)"
  echo "ğŸ‘‰  Run: npm ci"
else
  echo
  echo "âœ…  No dependency file changes detected"
fi
